<div class="col-md-10 col-md-offset-1">
		<div class= "message-show"> 
			<h2> <%= @message.title %></h2>
			<p class= "message-posted-by"><%= time_ago_in_words(@message.created_at) %> 
			Ago </p>
			<p classs= "message-desc"><%= @message.description %></p>
			
			<div class= "links btn-group">
				<%= link_to "Back", root_path, class: "btn btn-default" %>
				<%= link_to "Edit", edit_message_path(@message), class: "btn btn-primary" %>
				<%= link_to "Delete", message_path(@message), method: :delete, data: { confrim: "Are you sure?"}, class: "btn btn-danger" %>
			</div>
		</div>
</div>

